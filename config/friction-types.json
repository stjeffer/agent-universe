{
  "$schema": "../schemas/friction-types.schema.json",
  "version": "1.0.0",
  "friction_types": [
    {
      "id": "information_seeking",
      "name": "Information Seeking",
      "description": "Time spent searching for documents, data, or answers across multiple sources",
      "indicators": [
        "Multiple data sources mentioned in role",
        "Frequent reference to 'finding' or 'locating' information",
        "Cross-functional collaboration requirements"
      ],
      "typical_time_sink_hours_per_week": "2-5",
      "automation_potential": "high",
      "suggested_capabilities": ["OneDriveAndSharePoint", "GraphConnectors", "Email"]
    },
    {
      "id": "manual_document_creation",
      "name": "Manual Document Creation",
      "description": "Repetitive drafting of similar documents from scratch",
      "indicators": [
        "Regular creation of RFPs, reports, briefs, or proposals",
        "Standardized document formats mentioned",
        "Template references"
      ],
      "typical_time_sink_hours_per_week": "3-6",
      "automation_potential": "high",
      "suggested_capabilities": ["OneDriveAndSharePoint"]
    },
    {
      "id": "context_switching",
      "name": "Context Switching",
      "description": "Frequent jumping between applications, systems, or information sources",
      "indicators": [
        "Multiple tools/systems listed",
        "Integration or coordination tasks",
        "Cross-system data reconciliation"
      ],
      "typical_time_sink_hours_per_week": "2-4",
      "automation_potential": "medium",
      "suggested_capabilities": ["OneDriveAndSharePoint", "GraphConnectors"]
    },
    {
      "id": "approval_latency",
      "name": "Approval Latency",
      "description": "Waiting on sign-offs, reviews, or decisions from others",
      "indicators": [
        "Multi-level approval processes",
        "Escalation procedures",
        "Compliance checkpoints"
      ],
      "typical_time_sink_hours_per_week": "1-3",
      "automation_potential": "low",
      "suggested_capabilities": []
    },
    {
      "id": "reporting_overhead",
      "name": "Reporting Overhead",
      "description": "Time spent aggregating data and preparing status reports or summaries",
      "indicators": [
        "Regular reporting cadence mentioned",
        "Dashboard or metrics responsibilities",
        "Management updates required"
      ],
      "typical_time_sink_hours_per_week": "2-4",
      "automation_potential": "high",
      "suggested_capabilities": ["OneDriveAndSharePoint", "CodeInterpreter"]
    },
    {
      "id": "compliance_verification",
      "name": "Compliance Verification",
      "description": "Checking work against policies, regulations, or standards",
      "indicators": [
        "Regulatory compliance mentioned",
        "Policy adherence requirements",
        "Audit or review processes"
      ],
      "typical_time_sink_hours_per_week": "2-3",
      "automation_potential": "medium",
      "suggested_capabilities": ["OneDriveAndSharePoint"]
    },
    {
      "id": "stakeholder_communication",
      "name": "Stakeholder Communication",
      "description": "Explaining status, decisions, or processes to internal or external parties",
      "indicators": [
        "Cross-functional liaison role",
        "Customer or vendor communication",
        "Internal consulting responsibilities"
      ],
      "typical_time_sink_hours_per_week": "2-4",
      "automation_potential": "medium",
      "suggested_capabilities": ["OneDriveAndSharePoint", "Email", "TeamsMessages"]
    },
    {
      "id": "data_analysis",
      "name": "Data Analysis",
      "description": "Processing, analyzing, or interpreting data to derive insights",
      "indicators": [
        "Analytics or metrics responsibilities",
        "Trend analysis mentioned",
        "Data-driven decision making"
      ],
      "typical_time_sink_hours_per_week": "3-5",
      "automation_potential": "high",
      "suggested_capabilities": ["CodeInterpreter", "OneDriveAndSharePoint"]
    },
    {
      "id": "vendor_supplier_evaluation",
      "name": "Vendor/Supplier Evaluation",
      "description": "Comparing and assessing external parties against criteria",
      "indicators": [
        "Vendor selection responsibilities",
        "RFP/RFQ evaluation",
        "Supplier performance monitoring"
      ],
      "typical_time_sink_hours_per_week": "2-4",
      "automation_potential": "medium-high",
      "suggested_capabilities": ["OneDriveAndSharePoint", "WebSearch"]
    },
    {
      "id": "contract_tracking",
      "name": "Contract/Agreement Tracking",
      "description": "Monitoring deadlines, renewals, and obligations across agreements",
      "indicators": [
        "Contract management responsibilities",
        "Renewal tracking",
        "SLA monitoring"
      ],
      "typical_time_sink_hours_per_week": "1-3",
      "automation_potential": "high",
      "suggested_capabilities": ["OneDriveAndSharePoint"]
    },
    {
      "id": "knowledge_decay",
      "name": "Knowledge Decay",
      "description": "Tribal knowledge not documented; reliance on specific individuals",
      "indicators": [
        "Training or onboarding responsibilities",
        "Process documentation needs",
        "Key person dependencies"
      ],
      "typical_time_sink_hours_per_week": "1-2",
      "automation_potential": "medium",
      "suggested_capabilities": ["OneDriveAndSharePoint"]
    },
    {
      "id": "market_research",
      "name": "Market Research",
      "description": "Gathering external information about markets, competitors, or trends",
      "indicators": [
        "Industry monitoring",
        "Competitive analysis",
        "Market trend tracking"
      ],
      "typical_time_sink_hours_per_week": "1-3",
      "automation_potential": "medium",
      "suggested_capabilities": ["WebSearch"]
    }
  ]
}
