{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agent-universe/schemas/blueprint.schema.json",
  "title": "Agent Blueprint",
  "description": "Schema for declarative agent blueprint definitions",
  "type": "object",
  "required": ["id", "version", "name", "description", "metadata", "friction_addressed", "value_proposition", "capabilities", "setup", "conversation_starters"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for the agent (kebab-case)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the blueprint"
    },
    "name": {
      "type": "string",
      "maxLength": 100,
      "description": "Display name for the agent"
    },
    "description": {
      "type": "string",
      "maxLength": 1000,
      "description": "Brief description of what the agent does"
    },
    "metadata": {
      "type": "object",
      "required": ["sector", "role", "tags"],
      "properties": {
        "sector": {
          "type": "string",
          "description": "Sector ID this agent belongs to"
        },
        "role": {
          "type": "string",
          "description": "Role ID this agent is designed for"
        },
        "author": {
          "type": "string",
          "description": "Author or organization that created this blueprint"
        },
        "created": {
          "type": "string",
          "format": "date",
          "description": "Date the blueprint was created"
        },
        "updated": {
          "type": "string",
          "format": "date",
          "description": "Date the blueprint was last updated"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Searchable tags for the agent"
        }
      }
    },
    "friction_addressed": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "description"],
        "properties": {
          "type": {
            "type": "string",
            "description": "Friction type ID from friction-types.json"
          },
          "description": {
            "type": "string",
            "description": "Specific description of how this friction manifests for this role"
          }
        }
      }
    },
    "value_proposition": {
      "type": "object",
      "required": ["time_saved_per_week_hours", "primary_benefit"],
      "properties": {
        "time_saved_per_week_hours": {
          "type": "number",
          "minimum": 0,
          "description": "Estimated hours saved per week"
        },
        "primary_benefit": {
          "type": "string",
          "description": "Main value the agent provides"
        },
        "secondary_benefits": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Additional benefits"
        }
      }
    },
    "capabilities": {
      "type": "object",
      "required": ["required"],
      "properties": {
        "required": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "reason", "setup_instructions"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Capability ID from capabilities.json"
              },
              "reason": {
                "type": "string",
                "description": "Why this capability is needed"
              },
              "setup_instructions": {
                "type": "string",
                "description": "Brief guidance on configuring this capability"
              }
            }
          }
        },
        "optional": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "reason", "setup_instructions"],
            "properties": {
              "name": { "type": "string" },
              "reason": { "type": "string" },
              "setup_instructions": { "type": "string" }
            }
          }
        }
      }
    },
    "actions": {
      "type": "object",
      "properties": {
        "has_actions": {
          "type": "boolean",
          "description": "Whether this agent requires API plugins"
        },
        "description": {
          "type": "string",
          "description": "Description of actions or why none are needed"
        },
        "plugins": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" },
              "api_type": { "type": "string" }
            }
          }
        }
      }
    },
    "conversation_starters": {
      "type": "array",
      "minItems": 3,
      "maxItems": 12,
      "items": {
        "type": "object",
        "required": ["title", "text"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Short title for the starter"
          },
          "text": {
            "type": "string",
            "description": "The actual prompt text"
          }
        }
      }
    },
    "setup": {
      "type": "object",
      "required": ["complexity", "estimated_time_minutes", "prerequisites"],
      "properties": {
        "complexity": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "description": "Setup complexity level"
        },
        "estimated_time_minutes": {
          "type": "integer",
          "minimum": 5,
          "description": "Estimated setup time in minutes"
        },
        "prerequisites": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Requirements before setup can begin"
        }
      }
    },
    "governance": {
      "type": "object",
      "properties": {
        "data_accessed": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Types of data the agent will access"
        },
        "data_not_accessed": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Types of data the agent will NOT access"
        },
        "recommended_audience": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Who should have access to this agent"
        },
        "admin_considerations": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Notes for IT admins deploying this agent"
        }
      }
    }
  }
}
