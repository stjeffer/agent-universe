{
  "id": "procurement-officer",
  "sector": "operations",
  "title": "Procurement Officer",
  "also_known_as": [
    "Purchasing Officer",
    "Procurement Specialist",
    "Sourcing Specialist",
    "Buyer"
  ],
  "level": "Individual Contributor / Team Lead",
  "overview": "Procurement Officers manage the acquisition of goods and services for their organization. They evaluate suppliers, negotiate contracts, process purchase requests, and ensure procurement activities comply with organizational policies and regulations.",
  
  "typical_reporting": {
    "reports_to": ["Chief Procurement Officer", "CFO", "COO", "Procurement Manager"],
    "may_manage": ["Procurement Agents", "Purchasing Assistants"]
  },

  "task_clusters": [
    {
      "id": "purchase-requisition-processing",
      "name": "Purchase Requisition Processing",
      "description": "Review, validate, and approve purchase requests; ensure proper authorization and compliance with procurement policies",
      "frequency": "daily",
      "time_allocation_percent": 18,
      "inputs": ["Purchase requisitions", "Budget information", "Policy guidelines"],
      "outputs": ["Approved/rejected requisitions", "Purchase orders"],
      "collaborators": ["Department heads", "Finance", "Requesters"],
      "tools": ["ERP system", "Email", "Approval workflows"]
    },
    {
      "id": "supplier-sourcing-evaluation",
      "name": "Supplier Sourcing & Evaluation",
      "description": "Research vendors, evaluate capabilities, compare pricing, assess quality and reliability",
      "frequency": "weekly",
      "time_allocation_percent": 18,
      "inputs": ["Requirements specs", "Market information", "Supplier databases"],
      "outputs": ["Supplier shortlists", "Evaluation scorecards", "Recommendations"],
      "collaborators": ["Subject matter experts", "Quality team", "Legal"],
      "tools": ["Web search", "Supplier portals", "Evaluation templates"]
    },
    {
      "id": "rfp-rfq-management",
      "name": "RFP/RFQ/RFI Management",
      "description": "Draft solicitation documents, distribute to vendors, collect and evaluate responses",
      "frequency": "project-based",
      "time_allocation_percent": 12,
      "inputs": ["Requirements", "Templates", "Evaluation criteria"],
      "outputs": ["RFP/RFQ documents", "Bid evaluations", "Award recommendations"],
      "collaborators": ["Stakeholders", "Legal", "Evaluation committee"],
      "tools": ["Word/templates", "SharePoint", "Email"]
    },
    {
      "id": "contract-management",
      "name": "Contract Management",
      "description": "Draft, review, negotiate, and track contracts; monitor renewals and expirations",
      "frequency": "weekly",
      "time_allocation_percent": 18,
      "inputs": ["Contract templates", "Negotiation terms", "Legal guidance"],
      "outputs": ["Executed contracts", "Amendments", "Renewal notices"],
      "collaborators": ["Legal", "Suppliers", "Finance"],
      "tools": ["Contract repository", "DocuSign", "Tracking spreadsheets"]
    },
    {
      "id": "supplier-relationship-management",
      "name": "Supplier Relationship Management",
      "description": "Communicate with vendors, resolve issues, evaluate performance, maintain relationships",
      "frequency": "daily",
      "time_allocation_percent": 12,
      "inputs": ["Supplier communications", "Performance data", "Issue reports"],
      "outputs": ["Issue resolutions", "Performance reviews", "Relationship updates"],
      "collaborators": ["Suppliers", "Operations", "Quality"],
      "tools": ["Email", "Teams", "Supplier portals"]
    },
    {
      "id": "compliance-documentation",
      "name": "Compliance & Documentation",
      "description": "Ensure purchases comply with policies and regulations; maintain records and audit trails",
      "frequency": "daily",
      "time_allocation_percent": 12,
      "inputs": ["Policies", "Regulations", "Transaction records"],
      "outputs": ["Compliance records", "Audit documentation", "Policy updates"],
      "collaborators": ["Legal", "Audit", "Finance"],
      "tools": ["Document management", "ERP system", "Checklists"]
    },
    {
      "id": "spend-analysis-reporting",
      "name": "Spend Analysis & Reporting",
      "description": "Analyze procurement data, identify savings opportunities, prepare management reports",
      "frequency": "weekly/monthly",
      "time_allocation_percent": 7,
      "inputs": ["Spend data", "Contract terms", "Market benchmarks"],
      "outputs": ["Spend reports", "Savings analyses", "Recommendations"],
      "collaborators": ["Finance", "Management", "Category managers"],
      "tools": ["Excel", "BI tools", "ERP reports"]
    },
    {
      "id": "invoice-payment-coordination",
      "name": "Invoice & Payment Coordination",
      "description": "Reconcile invoices, resolve discrepancies, coordinate with accounts payable",
      "frequency": "daily",
      "time_allocation_percent": 8,
      "inputs": ["Invoices", "POs", "Receiving records"],
      "outputs": ["Approved invoices", "Discrepancy resolutions", "Payment authorizations"],
      "collaborators": ["Accounts Payable", "Suppliers", "Receiving"],
      "tools": ["ERP system", "Email", "Invoice processing system"]
    }
  ],

